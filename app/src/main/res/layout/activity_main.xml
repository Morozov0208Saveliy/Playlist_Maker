<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/screen_background_color_activity_main"
    android:paddingHorizontal="18dp"
    android:paddingTop="16dp"
    android:paddingBottom="28dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"
        android:textSize="@dimen/button_text_size"
        android:layout_gravity="start"
        tools:targetApi="p" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="40dp">

        <Button
            android:id="@+id/search_button"
            android:text="@string/title_search"
            app:icon="@drawable/ic_search_icon"
            style="@style/activity_main_button"/>



        <Button
            android:id="@+id/mediateca_button"
            android:text="@string/title_mediateca"
            app:icon="@drawable/ic_media_icon"
            style="@style/activity_main_button"/>

        <Button
            android:id="@+id/settings_button"
            android:text="@string/title_settings"
            app:icon="@drawable/ic_settings_icon"
            style="@style/activity_main_button"/>

    </LinearLayout>
</LinearLayout>