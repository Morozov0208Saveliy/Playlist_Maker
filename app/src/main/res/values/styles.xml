<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="activity_main_button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/main_screen_btn_ripple</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="backgroundTint">?attr/button_background_color_activity_main</item>
        <item name="android:textColor">?attr/button_text_color_activity_main</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="iconTint">?attr/screen_icon_color_activity_main</item>

    </style>
    <style name="activity_setting_textview">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">?attr/settings_text_color</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="activity_setting_frame_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/framelayout_margin_bottom</item>
    </style>
    <style name="activity_setting_imageview">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:paddingTop">@dimen/padding_top_12</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="image_fails">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">120dp</item>
        <item name="android:layout_gravity">center_horizontal</item>


    </style>


</resources>